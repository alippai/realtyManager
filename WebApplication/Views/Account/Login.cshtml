@model Realty.Models.LoginModel

@{
    ViewBag.Title = "Please sign in";
}

<h1>@ViewBag.Title.</h1>

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { @class = "input-block-level"})
        @Html.ValidationMessageFor(m => m.UserName)

        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "input-block-level"})
        @Html.ValidationMessageFor(m => m.Password)

        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
    <input type="submit" value="Log in" class="btn btn-primary" />
    <text>@Html.ActionLink("Register", "Register") if you don't have an account.</text>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
